{
  "name": "website",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "generate": "nuxt generate --fail-on-error",
    "lint:js": "eslint --ext .js,.vue .",
    "lint:style": "stylelint **/*.{vue,css}",
    "lint": "npm run lint:js && npm run lint:style",
    "deploy": "firebase deploy --only hosting --non-interactive",
    "deploy-dev": "firebase deploy --only hosting:website --non-interactive"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint",
    "*.{css,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/valueourminds/website.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/valueourminds/website/issues"
  },
  "homepage": "https://github.com/valueourminds/website#readme",
  "dependencies": {
    "bootstrap": "^4.5.2",
    "bootstrap-vue": "^2.16.0",
    "core-js": "^3.6.5",
    "nuxt": "^2.14.5"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^3.1.0",
    "@nuxtjs/eslint-module": "^2.0.0",
    "@nuxtjs/style-resources": "^1.0.0",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-nuxt": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "firebase-tools": "^8.7.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "netlify-plugin-checklinks": "^4.1.1",
    "netlify-plugin-csp-generator": "^1.1.8",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.1",
    "sass-loader": "^10.0.2",
    "stylelint": "^13.7.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0"
  }
}
